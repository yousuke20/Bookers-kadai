<% if @error_messages %>
  <div id="flash_notice">
    <%= @error_messages %>
  </div>
<% end %>  

<h1>Editing Book</h1>
<!--form_with部分-->
<%= form_with model:@book, local:true do |f| %>

  <% if @book.errors.any? %>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book' %>
<% end %>

<div class="tag">
  <%= link_to 'Show',book_path(@book) %>
  |
  <a href="/books">Back</a>
</div>